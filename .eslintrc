rules:
  linebreak-style:
    - 2
    - unix
  quotes:
    - 1 // While https://github.com/eslint/eslint/issues/9662#issuecomment-353958854 we don't enforce this
    - single
  no-console: 1
  no-global-assign: 0
  no-unsafe-negation: 0
  react/prop-types: 0
parser: babel-eslint

plugins:
  - react
env:
  browser: true
  commonjs: true
  es6: true
extends:
  - eslint:recommended
  - plugin:react/recommended
  - prettier
  - prettier/react
parserOptions:
  ecmaFeatures:
    jsx: true
